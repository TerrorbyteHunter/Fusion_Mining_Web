{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    { "src": "api/index.cjs", "use": "@vercel/node" },
    { "src": "dist/public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/marketplace/listings", "dest": "/api/marketplace/listings.js" },
    { "src": "/api/projects", "dest": "/api/projects.js" },
    { "src": "/api/(.*)", "dest": "/api/index.cjs" },
    { "src": "/(.*)", "dest": "/dist/public/$1" }
  ]
}
